<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxexample.controllers.StepTwoController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="195.0" minWidth="10.0" prefWidth="119.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0" prefWidth="279.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label styleClass="my-label" fx:id="emailLabel" text="E-mail*" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
      <Label styleClass="my-label" fx:id="passwordLabel" text="Password*" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <Label styleClass="my-label" fx:id="confirmPasswordLabel" text="Confirm Password*" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
      <TextField styleClass="my-text-field" fx:id="emailTextField" onKeyReleased="#onInputEmail" promptText="ex. john.smith@google.com" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
      <PasswordField styleClass="my-password-field" fx:id="passwordField" onKeyReleased="#onInputPassword" promptText="ex. Password123" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <PasswordField styleClass="my-password-field" fx:id="confirmPasswordField" onKeyReleased="#onInputConfirmPassword" promptText="ex. Password123" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
      <Button styleClass="my-button" fx:id="submitButton" disable="true" text="Submit" onAction="#onSubmit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
   </children>
</GridPane>
